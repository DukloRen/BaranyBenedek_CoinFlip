<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/coinImage"
        android:src="@drawable/heads"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/coinImage"
        android:layout_centerHorizontal="true"
        >
    <Button
        android:layout_width="210sp"
        android:layout_height="wrap_content"
        android:id="@+id/headsButton"
        android:text="Fej"
        android:layout_below="@+id/coinImage"
        />
    <Button
        android:layout_width="210sp"
        android:layout_height="match_parent"
        android:id="@+id/tailsButton"
        android:text="Írás"
        android:layout_below="@+id/coinImage"
        android:layout_toRightOf="@+id/headsButton"
        />
    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/throwCounter"
            android:text="Dobások: 0"
            android:layout_below="@+id/linearLayout"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/victoryCounter"
            android:text="Győzelem: 0"
            android:layout_below="@+id/throwCounter"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loseCounter"
            android:text="Vereség: 0"
            android:layout_below="@+id/victoryCounter"
            />
</RelativeLayout>